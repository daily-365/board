<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
   <mapper namespace="web.dao.face.BoardDAO">
    
    
    <!-- 목록 -->
    <select id="selectAllList" resultType="BoardDTO">
    select boardNo,boardTitle,boardContent,boardHit,boardDate
    from tbl_board       
    order by boardNo desc    
    </select>
    
    <!-- 상세보기 -->
    <select id="selectByBoardNo" resultType="BoardDTO">
    select boardNo,boardTitle,boardContent,boardHit,boardDate
    from tbl_board       
    where boardNo = #{boardNo}   
    </select>
    
    
    <!-- 등록 -->
    <insert id="writeBoard">
     insert into tbl_board (boardNo,boardTitle,boardContent)
    values (tbl_board_seq.nextVal,#{boardTitle},#{boardContent})
    </insert>
   
   
   <!-- 수정 -->
   <update id="modifyBoard">
   update tbl_board
   set boardTitle=#{boardTitle},
   boardContent=#{boardContent}
   where boardNo = #{boardNo}
   </update>
   
   
   <!-- 삭제 -->
   <delete id="deleteBoard">
    delete from tbl_board
   where boardNo = #{boardNo}
    </delete>
   
   
   
   
   </mapper>